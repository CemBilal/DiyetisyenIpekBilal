@model IEnumerable<DiyetisyenIpekBilal.Models.AboutMe>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                Resim
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AboutMee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Titlee)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagePath)
            </th>
            
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <img src="@item.ImagePath.Replace("wwwroot/","")" width="100" height="100">
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.AboutMee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Titlee)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ImagePath)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AboutMeID">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.AboutMeID">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.AboutMeID">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
